<link rel="stylesheet" href="/css/category.css">
<div class="category-container">
  <h1 class="category-title">分类: <%= page.category %></h1>
  
  <div class="category-post-list">
    <% page.posts.each(function(post) { %>
      <div class="category-post">
        <span class="category-post-date"><%= date(post.date, 'YYYY-MM-DD') %></span>
        <a href="<%- url_for(post.path) %>" class="category-post-title"><%= post.title %></a>
      </div>
    <% }); %>
  </div>
  
  <% if (page.total > 1) { %>
    <div class="category-pagination">
      <% if (page.prev) { %>
        <a href="<%- url_for(page.prev_link) %>" class="prev-page">上一页</a>
      <% } %>
      <span class="page-number">第 <%= page.current %> 页 / 共 <%= page.total %> 页</span>
      <% if (page.next) { %>
        <a href="<%- url_for(page.next_link) %>" class="next-page">下一页</a>
      <% } %>
    </div>
  <% } %>
</div>